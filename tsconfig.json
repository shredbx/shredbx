{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@ui-web/*": ["src/packages/ui-web/src"],
      "@patternbook/*": ["src/packages/patternbook-*/src"],
      "@playground/*": ["src/packages/playground/src"],
      "@playground/mcp/server": ["src/packages/playground/src/mcp/server"],
      "@playground/mcp/server/*": ["src/packages/playground/src/mcp/server/*"]
    }
  },
  "references": [
    { "path": "./src/packages/ui-web" },
    { "path": "./src/packages/patternbook" },
    { "path": "./src/packages/playground" }
  ],
  "include": ["src/packages/*/src/**/*", "src/apps/*/src/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}
